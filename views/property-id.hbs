<main class="p-5 backdrop-blur-md bg-white/30 m-4 text-white rounded">
<h1 class="mx-4 mb-5 text-4xl font-bold">Property Details:</h1>
  <h2>Property: {{property.property_name}}</h2>
  <h3>Address: {{property.property_street}}</h3>
  <h3>{{property.property_city}},
    {{property.property_state}}
    {{property.property_zip}}</h3>
  <h3>Property Owner:
    {{property.owner.owner_first_name}}
    {{property.owner.owner_last_name}}</h3>
  <h3>Owner Phone:{{property.owner.owner_phone}}</h3>
  <button
    name="deleteProperty"
    value="Delete Property"
    class="rounded-lg border-2 border-white bg-red-400 px-2"
    hx-delete="/properties/{{property.property_id}}"
    hx-target="#main"
    hx-confirm="Are you sure you want to delete this property? This action cannot be undone."
  >Delete</button>
  
  <button
    name="updateProperty"
    value="Update Property"
    class="rounded-lg border-2 border-white bg-green-400 px-2"
    hx-on:click="document.getElementById('property-update').classList = 'visible', 'p-5' "
    hx-target="#main"
  >Update</button>
  <div id="property-update" class="hidden" class="p-5">
    <form class="flex flex-col">
      <label class="mt-3" for="property_name">Property Name:</label>
      <input
        type="text"
        name="property_name"
        value="{{property.property_name}}"
      />
      <label class="mt-3" for="property_street">Property Street Address:</label>
      <input
        type="text"
        name="property_street"
        value="{{property.property_street}}"
      />
      <label class="mt-3" for="property_city">Property City:</label>
      <input
        type="text"
        name="property_city"
        value="{{property.property_city}}"
      />
      <label class="mt-3" for="property_state">Property State:</label>
      <input
        type="text"
        name="property_state"
        value="{{property.property_state}}"
      />
      <label class="mt-3" for="property_zip">Property Zip:</label>
      <input
        type="text"
        name="property_zip"
        value="{{property.property_zip}}"
      />
      <label class="mt-3" for="owner_id">Property Owner:</label>
      <input type="text" name="owner_id" value="{{property.owner_id}}" />
    
       {{!-- <button
        class="rounded-lg border-2 border-slate-300 bg-red-400 px-2 mt-3"
        hx-confirm="Are you sure you want to cancel? All changes will be lost."
        type="cancel"
         hx-on:click="document.getElementById('property-update').classList = 'hidden' "
      ><h3>Cancel</h3></button> --}}
      
      <button
        class="rounded-lg border-2 border-slate-300 bg-green-400 px-2 mt-3"
        hx-patch="/properties/{{property.property_id}}"
        type="submit"
         hx-on:click="document.getElementById('property-update').classList = 'hidden' "
      ><h3>Submit</h3></button>
    </form>
  </div>
  <ol>
    <h3>Property Issues:</h3>
    {{#each property.issues as |issue|}}
      <li hx-get="/issues/{{issue_id}}" hx-target="#main" hx-trigger="click">
        {{issue.issue_title}}
      </li>
    {{/each}}
  </ol>
</main>