<main class="bg-[#085394] px-4">
  <h1 class="font-bold text-2xl mt-8">{{issue.issue_title}}</h1>
  <h2 class="font-semibold text-lg mt-5">Property: 
    <span class="font-normal text-">{{issue.property.property_name}}</span>
  </h2>
  <div>
    <h3>Description: {{issue.issue_description}}</h3>
    <p>Previous Actions:</p>
    <ul>
      {{#each tasks}}
      <li
        hx-get="/tasks/{{task_id}}"
        {{!-- hx-trigger="changed" --}}
        {{!-- hx-trigger="change" --}}
        {{!-- hx-target will be itself, so no need to specify --}}
        {{!-- the swap will be innerHTML, also default --}}
        {{!-- hx-push-url="true" --}}
      >Task: {{task_name}}
      {{#if is_done}}
        <input type="button" name="isDone" value="Re-Open"
        class="border-2 border-black rounded-lg px-2"
        hx-patch="/issues/{{task_id}}/isDone"
        hx-swap="#main"
        >
      {{else}}
        <input type="button" name="isDone" value="Completed"
        class="border-2 border-black rounded-lg px-2"
        hx-patch="/issues/{{task_id}}/isDone"
        hx-swap="#main"
        >
      {{/if}}
      </li>
      {{/each}}
    </ul>
  </div>
  </main>
</main>