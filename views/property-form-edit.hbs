<form
  class="flex flex-col"
  hx-patch="/properties/{{property.property_id}}/edit"
  hx-target="#main"
>
  <div>
    <label class="inline-block font-semibold">Property Name: </label>
    <input
      class="mb-2 rounded text-gray-500"
      type="text"
      name="property_name"
      value="{{property.property_name}}"
      autofocus
    />
  </div>
  <div>
    <label class="inline-block font-semibold">Property Address: </label>
    <input
      class="mb-2 rounded text-gray-500"
      type="text"
      name="property_street"
      value="{{property.property_street}}"
    />
    <input
      class="mb-2 rounded text-gray-500"
      type="text"
      name="property_city"
      value="{{property.property_city}}"
    />
    <input
      class="mb-2 rounded text-gray-500"
      type="text"
      name="property_state"
      value="{{property.property_state}}"
    />
    <input
      class="mb-2 rounded text-gray-500"
      type="text"
      name="property_zip"
      value="{{property.property_zip}}"
    />

    <select name="owner_id" class="text-gray-500">
      <option
        value="{{property.owner.owner_id}}"
        disabled
        selected
        hidden
      >{{property.owner.owner_first_name}}
        {{property.owner.owner_last_name}}</option>
      {{#each owners}}
        <option value="{{owner_id}}">{{owner_first_name}}
          {{owner_last_name}}</option>
      {{/each}}
    </select>

  </div>
  <div class="my-5">
    <button
      class="rounded bg-green-400 px-2 hover:bg-green-500 focus:outline-none focus:ring focus:ring-blue-300 active:bg-green-700"
      type="submit"
    >Submit</button>
    <button
      class="rounded bg-red-400 px-2 hover:bg-red-500 focus:outline-none focus:ring focus:ring-blue-300 active:bg-red-700"
      hx-get="/properties/{{property.property_id}}"
      hx-target="#main"
    >Cancel</button>
  </div>
  {{#if isError}}
    <div class="p-2 text-red-500">{{msg}}</div>
  {{/if}}
</form>