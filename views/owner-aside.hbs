<main>
  <button hx-get="/owners/new" hx-target="#main">Add New Owner</button>
  <h1 class="mx-4 mb-5 pt-5 text-4xl font-bold">Owners</h1>
  <ul
    id="ownersList"
    hx-trigger="update-list from:body"
    hx-get="/owners"
    hx-target="#aside"
  >
    {{#each owners as |owner|}}
      <li
        class="m-4 cursor-pointer rounded bg-white/30 p-2 text-white backdrop-blur-sm"
        hx-get="/owners/{{owner_id}}"
        hx-target="#main"
        hx-trigger="click"
        hx-boost="true"
        hx-push-url="true"
      >
        <h2 hx-target="closest li">{{owner_first_name}} {{owner_last_name}}</h2>
        <p hx-target="closest li">{{owner_phone}}</p>
        <p hx-target="closest li">{{owner_email}}</p>
      </li>
    {{/each}}
  </ul>
</main>

{{#if isOob}}
<div hx-swap-oob="true" id="selectOption"></div>
<div hx-swap-oob="true" id="searchBar"></div>
{{/if}}