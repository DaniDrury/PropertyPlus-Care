<ul
  id="propertiesList"
  hx-trigger="update-properties from:body"
  hx-get="/properties"
  hx-target="#aside"
>
  {{#each properties as |property|}}
    <li
      class="m-4 cursor-pointer rounded bg-white/30 p-2 text-white backdrop-blur-sm"
      hx-get="/properties/{{property_id}}"
      hx-target="#main"
      hx-push-url="true"
    >
      <h2>{{property_name}}</h2>
      <p>{{property_street}}</p>
      <p>{{property_city}}</p>
      <p>{{property_state}}</p>
      <p>{{property_zip}}</p>
    </li>
  {{/each}}
</ul>

{{#if isOob}}
  <h1 id="asideTitle" hx-swap-oob="true" class="mx-4 mb-5 pt-5 text-4xl font-bold">Properties</h1>
  <div id="selectOption" hx-swap-oob="true" ></div>
  <div id="searchBar" hx-swap-oob="true" ></div>
  <button id="addBtn" hx-swap-oob="true" hx-get="/properties/new" hx-target="#main">Add New Property</button>
{{/if}}