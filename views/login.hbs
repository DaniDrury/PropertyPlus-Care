<div class="flex-col h-max w-auto">
  <h1 class="text-white text-center text-2xl font-bold mb-2">Please Enter Your Credentials</h1>
  <form
    class="m-4 rounded bg-inherit px-4 text-white backdrop-blur-xl shadow-lg"
    hx-post="/login" hx-target="#main" hx-push-url="true">
    <label class="mb-2 pt-3 block text-sm font-bold text-white" for="user_email">Email</label>
    <input
      class="focus:shadow-outline w-full appearance-none rounded border px-1 py-2 leading-tight text-gray-500 shadow focus:outline-none"
      type="email" name="user_email" placeholder="example@example.com" />
    <label class="my-2 block text-sm font-bold text-white" for="user_password">Password</label>
    <input
      class="focus:shadow-outline w-full appearance-none rounded border px-1 py-2 leading-tight text-gray-500 shadow focus:outline-none"
      type="password" name="user_password" placeholder="**********" />
    <div class="flex justify-center">
      <button class="bg-blue-500 px-2 hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300 active:bg-green-700 my-3 shadow-lg me-4 border-2 border-white rounded-xl py-1 hover:scale-105 hover:shadow-xl"
      type="submit">Login</button>
    </div>
    {{#if isError}}
    <div class="p-2 text-red-500">{{msg}}</div>
    {{/if}}
  </form>
  <a href="/signup" class="text-white cursor-pointer flex justify-center">Register for Account</a>
</div>