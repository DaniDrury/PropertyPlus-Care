<form class="flex flex-col text-gray-600" 
  hx-post="/issues/new"
  hx-target="#main">

  <label for="issue_title">Issue Title:</label>
  <input type="text" name="issue_title" />

  <label for="issue_description">Issue Description:</label>
  <input type="text" name="issue_description" />

  <label for="followUp_date">Issue Property:</label>
  <select name="property_id" class="rounded mt-2 text-gray-400">
    {{#each properties}}
      <option value="{{property_id}}">{{property_name}}</option>
    {{/each}}
  </select>

  <button class="my-5 border-2 border-slate-300 rounded-lg px-2 bg-purple-900 text-white" type="submit">Save Issue</button>
</form>
<button class="border-2 border-slate-300 rounded-lg px-2"
  hx-post="/new"
  hx-target="#main"
>Cancel New Issue</button>