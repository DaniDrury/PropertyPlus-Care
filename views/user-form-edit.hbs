<form class="flex flex-col text-white" hx-patch="/users" hx-target="#main">
  <div>
    <label class="inline-block font-semibold">Username: </label>
    <input
      class="rounded pl-1 mt-2"
      placeholder="Username"
      class="mb-2 rounded text-gray-500"
      type="text"
      name="user_name"
      value="{{user.user_name}}"
      autofocus
    />
  </div>

  <div>
    <label class="inline-block font-semibold">Email: </label>
    <input
      class="rounded pl-1 mt-2"
      placeholder="email@domain.com"
      class="mb-2 rounded text-gray-500"
      type="email"
      name="user_email"
      value="{{user.user_email}}"
    />
  </div>

  <div>
    <label for="user_password">Password: </label>
    <input
      placeholder="*********"
      class="rounded pl-1 mt-2"
      type="password"
      name="user_password"
    />
  </div>
  <div>
    <button
      class="my-5 rounded bg-green-400 px-2 shadow-lg hover:bg-green-600 focus:outline-none focus:ring focus:ring-blue-300 active:bg-green-700"
      type="submit"
    >Submit</button>
    <button
      class="mx-1 my-3 rounded bg-red-400 px-2 shadow-lg hover:bg-red-600 focus:outline-none focus:ring focus:ring-blue-300 active:bg-red-700"
      hx-get="/cancel"
      hx-target="#main"
    >Cancel</button>
  </div>
</form>