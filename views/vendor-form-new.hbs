<main class="m-4 rounded bg-white/30 px-4 text-white backdrop-blur-md">
  <form
    class="flex flex-col text-gray-600"
    hx-post="/vendors/new"
    hx-target="#main"
  >
    <label for="vendor_first_name">First Name:</label>
    <input type="text" name="vendor_first_name" autofocus />

    <label for="vendor_last_name">Last Name:</label>
    <input type="text" name="vendor_last_name" />

    <label for="vendor_trade">Trade:</label>
    <select name="vendor_trade">
      <option value="" disabled selected hidden>Pick a trade</option>
      <option value="Electrical">Electrical</option>
      <option value="Flooring">Flooring</option>
      <option value="Handyman">Handyman</option>
      <option value="Plumbing">Plumbing</option>
      <option value="Roofer">Roofer</option>
    </select>

    <label for="vendor_email">Email:</label>
    <input type="email" name="vendor_email" />

    <label for="vendor_phone">Phone Number:</label>
    <input type="text" name="vendor_phone" />

    <button class="my-5" type="submit">Create Vendor</button>
  </form>

</main>