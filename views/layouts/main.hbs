<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://kit.fontawesome.com/542c6a9870.css"
      crossorigin="anonymous"
    />
    <title>PropertyPlus Care</title>
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
    <script src="/js/htmx.min.js"></script>
  </head>
  <body class="text-white bg-[url('/img/bg.jpeg')] bg-cover bg-no-repeat">

    <header>
      <a class="m-6 object-right-top p-1 float-right inline" href="/users" hx-boost="true" hx-target="#main">
        <i class="fa-regular fa-user inline pr-1"></i>
        Account
      </a>
    <img class="float-left" src="/img/Logo.png" alt="logo">
    </header>

    <div class="flex w-[95%] m-auto justify-around">
      <aside class="w-[20%]">
        <select class="text-gray-400 mt-5"
          name="model"
          hx-get="/aside"
          hx-target="#aside"
          hx-trigger="click, change throttle:100ms,"
          hx-push-url="true"
        >
          <option value="task" selected="selected=">Tasks</option>
          <option value="issues">Issues</option>
          <option value="property">Properties</option>
          <option value="vendor">Vendors</option>
          <option value="owner">Owners</option>
        </select>
        <div id="searchBar"></div>
        <div>
          <h1 id="asideTitle" class="mx-4 mb-5 pt-5 text-4xl font-bold">Today's Tasks</h1>
          <div id="selectOption"></div>
        </div>
        <div class="overflow-auto max-h-[80vh]" id="aside">{{{body}}}</div>
        <div id="addBtn"></div>
      </aside>

      <div id="main" class="w-[75%] mt-16 max-h-[80vh]"></div>
    </div>

    <footer
      class="fixed bottom-0 flex w-screen bg-slate-500 text-center align-bottom sm:hidden"
    >
      <nav class="m-auto w-screen py-1.5">
        <ul class="flex max-w-screen-sm justify-around">
          <li><i
              hx-get="/test/pg1"
              hx-trigger="click"
              hx-swap="innerHTML"
              hx-target="#test"
              hx-push-url="true"
              class="fa-regular fa-calendar fa-3x"
            ></i></li>
          <li><i
              hx-get="/test/pg2"
              hx-trigger="click"
              hx-swap="innerHTML"
              hx-target="#test"
              hx-push-url="true"
              class="fa-regular fa-square-check fa-3x"
            ></i></li>
          <li><i
              hx-get="/test/pg3"
              hx-trigger="click"
              hx-swap="innerHTML"
              hx-target="#test"
              hx-push-url="true"
              class="fa-regular fa-house fa-3x"
            ></i></li>
          <li><i
              hx-get="/test/pg4"
              hx-trigger="click"
              hx-swap="innerHTML"
              hx-target="#test"
              hx-push-url="true"
              class="fa-regular fa-user-helmet-safety fa-3x"
            ></i></li>
        </ul>
      </nav>
    </footer>
  </body>
</html>